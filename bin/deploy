#!/usr/bin/env sh

# Run this script to deploy the app to Github Pages.

# Exit if any subcommand fails.
set -e

echo "Started deploying"

# Prepare docker image
SCRIPT=$( realpath -s "$0" ) 
REPO_DIR=`dirname $(dirname ${SCRIPT})`
cd $REPO_DIR
IMAGE_ID=$(docker build -q .)
CONTAINER=`echo docker run -v $REPO_DIR:/blog $IMAGE_ID`

# Checkout master branch.
if [ `git branch | grep master` ]
then
  git branch -D master
fi
git checkout -b master

# Build site.
$CONTAINER yarn install --modules-folder ./_assets/yarn
$CONTAINER bundle exec jekyll build

# Delete and move files.
find . -maxdepth 1 ! -name '_site' ! -name '.git' ! -name '.gitignore' -exec rm -rf {} \;
mv _site/* .
rm -R _site/

# Push to master.
git add -fA
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
git push -f -q origin master

# Move back to previous branch.
git checkout -
$CONTAINER yarn install --modules-folder ./_assets/yarn

echo "Deployed Successfully!"

exit 0
